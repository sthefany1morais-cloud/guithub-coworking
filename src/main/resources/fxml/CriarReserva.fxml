<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.view.controller.CriarReservaController">
    <center>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="tituloLabel" text="Criar Reserva" />
                <HBox spacing="10.0">
                    <children>
                        <Label text="Filtro Tipo:" />
                        <ComboBox fx:id="filtroTipoComboBox" prefWidth="150.0" />
                        <CheckBox fx:id="disponiveisCheckBox" text="Somente Disponíveis" />
                        <TextField fx:id="buscaField" promptText="Buscar por ID ou Nome" prefWidth="150.0" />
                    </children>
                </HBox>
                <TableView fx:id="espacosTableView" prefHeight="200.0" prefWidth="500.0">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
                        <TableColumn fx:id="nomeColumn" text="Nome" prefWidth="150.0" />
                        <TableColumn fx:id="tipoColumn" text="Tipo" prefWidth="100.0" />
                        <TableColumn fx:id="capacidadeColumn" text="Capacidade" prefWidth="80.0" />
                        <TableColumn fx:id="disponivelColumn" text="Disponível" prefWidth="80.0" />
                    </columns>
                </TableView>
                <HBox spacing="10.0">
                    <children>
                        <Label fx:id="detalhesLabel" text="Selecione um espaço para ver detalhes." />
                    </children>
                </HBox>
                <Button fx:id="criarReservaButton" mnemonicParsing="false" text="Criar Reserva para Selecionado" disable="true" onAction="#criarReserva" />
                <Button fx:id="voltarButton" mnemonicParsing="false" text="Voltar" onAction="#voltar" />
            </children>
        </VBox>
    </center>
</BorderPane>