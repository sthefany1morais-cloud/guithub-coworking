<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.view.controller.CadastroEspacoController">
    <center>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="tituloLabel" text="Criar Espaço" />
                <GridPane hgap="10.0" vgap="10.0">
                    <children>
                        <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ComboBox fx:id="tipoComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#atualizarCamposEspecificos" />
                        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="nomeField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Capacidade:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="capacidadeField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Preço por Hora:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="precoField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label fx:id="campoEspecificoLabel" text="" GridPane.columnIndex="0" GridPane.rowIndex="4" visible="false" />
                        <TextField fx:id="campoEspecificoField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" visible="false" />
                    </children>
                </GridPane>
                <Button fx:id="salvarButton" mnemonicParsing="false" text="Salvar" onAction="#salvar" />
                <Button fx:id="limparButton" mnemonicParsing="false" text="Limpar" onAction="#limpar" />
                <Button fx:id="voltarButton" mnemonicParsing="false" text="Voltar" onAction="#voltar" />
            </children>
        </VBox>
    </center>
</BorderPane>