<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.view.controller.EditarEspacoDetalhesController">
    <center>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="tituloLabel" text="Editar Espaço Detalhes" />
                <GridPane hgap="10.0" vgap="10.0">
                    <children>
                        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nomeField" promptText="Deixe em branco para manter" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Capacidade:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="capacidadeField" promptText="Deixe em branco para manter" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Preço por Hora:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="precoField" promptText="Deixe em branco para manter" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label fx:id="campoEspecificoLabel" text="" GridPane.columnIndex="0" GridPane.rowIndex="3" visible="false" />
                        <TextField fx:id="campoEspecificoField" promptText="Deixe em branco para manter" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" visible="false" />
                        <Label text="Disponível:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <CheckBox fx:id="disponivelCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                </GridPane>
                <Button fx:id="salvarButton" mnemonicParsing="false" text="Salvar" onAction="#salvar" />
                <Button fx:id="voltarButton" mnemonicParsing="false" text="Voltar" onAction="#voltar" />
            </children>
        </VBox>
    </center>
</BorderPane>
